{
  "name": "compre",
  "description": "compares products for you",
  "version": "0.0.1",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions":[
    "activeTab",
    "storage",
    "declarativeContent",
    "contextMenus"],
  "content_scripts": [
    {
      "matches": ["https://www.amazon.in/*"],
      "js": ["scrapeItemPage.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
